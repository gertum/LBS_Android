<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.os_app_gertum1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Declare the main activity -->
        <activity
            android:name=".ui.signalstrengthlist.SignalStrengthListActivity"
            android:exported="true"
            android:label="Signal Strength List"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar">
            <!-- Main launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare the edit signal strength activity -->
        <activity
            android:name=".ui.editsignalstrength.EditSignalStrengthActivity"
            android:label="Edit Signal Strength" />

    </application>
</manifest>